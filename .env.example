# Image Classification Configuration
# Copy this file to .env and modify as needed

# --- Model parameters ---
# Image size for processing (height and width)
IMAGE_SIZE_HEIGHT=224
IMAGE_SIZE_WIDTH=224

# Training parameters
BATCH_SIZE=32
EPOCHS=10
TEST_SIZE=0.2

# --- Duplicate detection parameters ---
# Set to "false" to keep duplicates
REMOVE_DUPLICATES=true
# Hamming distance threshold (0-10, lower is stricter)
DUPLICATE_THRESHOLD=4
# Set to "true" to only remove exact duplicates (same MD5 hash)
EXACT_DUPLICATES_ONLY=false

# --- Hardware acceleration settings ---
# Set to "true" to force CPU-only mode (no GPU)
FORCE_CPU=false
# Number of CPU threads to use (0 = auto-detect)
CPU_THREADS=0
# Set to "false" to disable mixed precision training
USE_MIXED_PRECISION=true 